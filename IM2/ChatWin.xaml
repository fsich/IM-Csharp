<Window x:Class="IM2.ChatWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatWin" Height="309" Width="300"
        Style="{StaticResource {x:Type Window}}">
    <Grid Margin="0,0,0,-8" Height="309" VerticalAlignment="Top">
        <Button Style="{StaticResource XButton}" Click="onChatWinClose" HorizontalAlignment="Left" Margin="257,2,0,0" VerticalAlignment="Top" Width="25" />
        <Button Style="{StaticResource MButton}" HorizontalAlignment="Left" Height="22" Margin="227,5,0,0" VerticalAlignment="Top" Width="25"/>
        <Label Style="{StaticResource Label}" Name="NameLabel" Margin="10,10,70,277" Height="22" Width="212"/>
        <RichTextBox Name="MessageBox" Margin="10,40,10,50"/>
        <TextBox Name="SendBox" Margin="10,264,82,10"/>
        <Button Style="{StaticResource MButton}" Name="SendButton" Click="SendEvent" Content="Send" Margin="215,264,10,10" Width="Auto" Height="Auto"/>
    </Grid>
</Window>
